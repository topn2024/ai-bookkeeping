# AI Bookkeeping Server Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# App Configuration
APP_NAME=AI Bookkeeping
DEBUG=false
SECRET_KEY=your-secret-key-here-generate-a-strong-random-string

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_bookkeeping

# Redis
REDIS_URL=redis://:password@localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-a-strong-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=ai-bookkeeping
MINIO_SECURE=false

# AI APIs
QWEN_API_KEY=your-qwen-api-key
ZHIPU_API_KEY=your-zhipu-api-key

# OAuth - WeChat (Optional)
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# OAuth - Apple Sign In (Optional)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# OAuth - Google (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Logging
LOG_LEVEL=INFO

# AI Bookkeeping Server Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# App Configuration
APP_NAME=AI Bookkeeping
DEBUG=false
SECRET_KEY=your-secret-key-here-generate-a-strong-random-string

# Database (PostgreSQL)
# Docker Compose variables
POSTGRES_USER=ai_bookkeeping
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=ai_bookkeeping
# Application connection string
DATABASE_URL=postgresql+asyncpg://ai_bookkeeping:your-secure-postgres-password-here@localhost:5432/ai_bookkeeping

# Redis
# Docker Compose variable
REDIS_PASSWORD=your-secure-redis-password-here
# Application connection string
REDIS_URL=redis://:your-secure-redis-password-here@localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-a-strong-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# MinIO Object Storage
# Docker Compose variables
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password-here
# Application connection
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=ai-bookkeeping
MINIO_SECURE=false

# AI APIs
QWEN_API_KEY=your-qwen-api-key
ZHIPU_API_KEY=your-zhipu-api-key

# Voice Services - Alibaba Cloud NLS (Natural Language Services)
ALIBABA_ACCESS_KEY_ID=your-alibaba-access-key-id
ALIBABA_ACCESS_KEY_SECRET=your-alibaba-access-key-secret
ALIBABA_NLS_APP_KEY=your-alibaba-nls-app-key

# Voice Services - Picovoice Porcupine (Wake Word Detection)
PICOVOICE_ACCESS_KEY=your-picovoice-access-key

# OAuth - WeChat (Optional)
WECHAT_APP_ID=
WECHAT_APP_SECRET=

# OAuth - Apple Sign In (Optional)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# OAuth - Google (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Logging
LOG_LEVEL=INFO

SMTP_HOST=smtpdm.aliyun.com
SMTP_PORT=465
SMTP_USER=noreply@mail.yourdomain.com # 发件人地址
SMTP_PASSWORD=你的SMTP密码
SMTP_FROM_EMAIL=noreply@mail.yourdomain.com # 发件人地址
SMTP_FROM_NAME=xxx
SMTP_USE_TLS=false  # 465端口用SSL，设为false
# Public URL for MinIO file access (used for generating download URLs)
# Set this to your server public URL, e.g., https://your-server.com
MINIO_PUBLIC_URL=
